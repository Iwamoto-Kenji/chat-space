  .main_content
    .main_header
      .main_header_display
        .main_group_name
          sampleグループ
        .main_login_name
          Members:test
      .edit_btn
        Edit
    .messageslists
      = render partial: "messages/message", locals: { message: @message }

    %form{action: "/", method:  "post", class: "form"}
      .new-message
        %input{name: "body", placeholder: "type a message",class: "input-box"}

        %label.upload-label{for: "upload-icon"}
          %i.fa.fa-picture-o
          %input{name: "image", type: "file",class: "input-box__image",id: "upload-icon"}
        %input{type: "submit", value: "send",class:"submit-btn"}
