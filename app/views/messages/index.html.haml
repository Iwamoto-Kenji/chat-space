.contents
  = render 'shared/side_bar'

  .main_content
    .main_header
      .main_header_display
        .main_group_name
          = @group.name
        %ul.main_login_name 
          Members : 
          %li>
          - @group.users.each do |group_user|
            = group_user.name
      = link_to 'Edit', edit_group_path(@group.id), class: "edit_btn"
        
    .messageslists
      = render @messages

    .form
      = form_for [@group, @message], html:{class: "new_message", id: 'new_message'} do |f|
        = f.text_field :content, class: 'input-box', placeholder: 'type a message'
        = f.label :image, class: 'upload-label' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'input-box__image'
        = f.submit 'Send', class: 'submit-btn'

